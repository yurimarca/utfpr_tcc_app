<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/registropercurso_textview_title"
        android:text="@string/registropercurso_textview_title"
        android:textColor="@color/myPrimaryColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_height="2dip"
        android:background="@color/myPrimaryColor"
        android:layout_below="@+id/registropercurso_textview_title"
        android:layout_width="wrap_content"
        android:id="@+id/view1" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoParadaProgramada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Parada Programada"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoSolicitacaoPassageiro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Solicitacao Passageiro"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoSolicitacaoMotorista"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Solicitacao Motorista"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoSolicitacaoExterna"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Solicitacao Externa"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoSolicitacaoAgente"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Solicitacao Agente"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoAcidenteVia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Acidente Via"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoAcidenteVeiculo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Acidente Veículo"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoAcidentePassageiro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Acidente Passageiro"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnOpcaoDefeito"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Defeito no Veículo"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnTroca"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myPrimaryColor"
        android:text="Troca Programada"/>

</LinearLayout>